# Server Configuration
PORT=3000
NODE_ENV=production

# PostgreSQL Database Configuration
# These will be automatically provided by Easypanel
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_password_here
PGDATABASE=bookavan

# SendGrid Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@yourcompany.com

# Microsoft Entra ID (Azure AD) Configuration
# Comma-separated list of allowed tenant IDs
ENTRA_ALLOWED_TENANTS=your-tenant-id-1,your-tenant-id-2

# Admin Configuration
# Comma-separated list of admin email addresses
ADMIN_EMAILS=admin@company.com,it@company.com

# Microsoft Entra ID Application Configuration (for frontend)
# You'll need to register an app in Azure Portal
ENTRA_CLIENT_ID=your_client_id_here
ENTRA_TENANT_ID=your_primary_tenant_id_here

